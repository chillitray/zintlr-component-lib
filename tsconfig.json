{
  "compilerOptions": {
    // Base directory to resolve non-relative module names
    "baseUrl": "src",
    // Root directory of input files
    "rootDir": "src",
    // ECMAScript target version
    "target": "es2020",
    // Module code generation
    "module": "esnext",
    // Module resolution strategy
    "moduleResolution": "node",
    // Ensures each file can be safely transpiled without relying on other imports
    "isolatedModules": true,
    // Use tslib helpers for smaller output
    "importHelpers": true,
    // Support JSX in React 17+ (automatic runtime)
    "jsx": "react-jsx",
    // Enables default interoperability between CommonJS and ES Modules
    "esModuleInterop": true,
    // Allow default imports from modules with no default export
    "allowSyntheticDefaultImports": true,
    // Enable experimental support for decorators
    "experimentalDecorators": true,
    // Emit decorator metadata for runtime reflection
    "emitDecoratorMetadata": true,
    // Generate .d.ts declaration files
    "declaration": true,
    // Output directory for declaration files
    "declarationDir": "dist/types",
    // Generate source maps for declaration files
    "declarationMap": true,
    // Do not include the default library file (like lib.d.ts)
    "noLib": false,
    // Preserve const enums in output
    "preserveConstEnums": true,
    // Generate corresponding .map files
    "sourceMap": true,
    // Enable all strict type-checking options
    "strict": true,
    // Enable strict null checks
    "strictNullChecks": true,
    // Raise error on expressions and declarations with an implied 'any' type
    "noImplicitAny": true,
    // Raise error on 'this' expressions with an implied 'any' type
    "noImplicitThis": true,
    // Report error when not all code paths in function return a value
    "noImplicitReturns": true,
    // Report errors for fallthrough cases in switch statements
    "noFallthroughCasesInSwitch": true,
    // Report errors on unused local variables
    "noUnusedLocals": true,
    // Report errors on unused parameters
    "noUnusedParameters": true,
    // Do not remove comments from output
    "removeComments": false,
    // List of library files to include in the compilation
    "lib": [
      "es2020",      // ECMAScript 2020 library
      "dom",         // DOM library for browser APIs
      "dom.iterable" // Iterable DOM collections
    ],
    // Skip type checking of declaration files (*.d.ts)
    "skipLibCheck": true,
    // Provide full support for iterables in ES5/ES3
    "downlevelIteration": true,
    // Remove declarations marked as @internal
    "stripInternal": true,
    // Ensure file names are case-consistent
    "forceConsistentCasingInFileNames": true,
    // Allow importing .json files as modules
    "resolveJsonModule": true,
    // Allow JavaScript files to be compiled
    "allowJs": true,
    // Do not check JavaScript files
    "checkJs": false,
    // Output directory for compiled files
    "outDir": "dist",
    // List of root directories of input files
    "rootDirs": [
      "src"
    ]
  },
  // Files to include in the compilation
  "include": [
    "src/**/*"
  ],
  // Files/directories to exclude from compilation
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
